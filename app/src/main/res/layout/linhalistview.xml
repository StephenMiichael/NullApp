<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/botaocomprar"
        android:layout_width="100dp"
        android:layout_height="31dp"
        android:text="@string/comprar"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/qntproduto"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/qntproduto"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:text="@string/textview"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imagelist"
        app:layout_constraintStart_toEndOf="@+id/imagelist" />

    <TextView
        android:id="@+id/precoproduto"
        android:layout_width="110dp"
        android:layout_height="34dp"
        android:text="@string/textview"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nomeproduto" />

    <TextView
        android:id="@+id/nomeproduto"
        android:layout_width="127dp"
        android:layout_height="28dp"
        android:text="@string/textview"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imagelist"
        app:layout_constraintTop_toTopOf="@+id/imagelist" />

    <ImageView
        android:id="@+id/imagelist"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="14dp"
        android:contentDescription="@string/todo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

</android.support.constraint.ConstraintLayout>