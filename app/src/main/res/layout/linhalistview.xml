<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/botaocomprar"
        android:layout_width="100dp"
        android:layout_height="31dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="9dp"
        android:text="@string/comprar"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/precoproduto" />

    <TextView
        android:id="@+id/qntproduto"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginEnd="84dp"
        android:layout_marginTop="5dp"
        android:text="@string/textview"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/botaocomprar"
        app:layout_constraintTop_toBottomOf="@+id/nomeproduto" />

    <TextView
        android:id="@+id/precoproduto"
        android:layout_width="136dp"
        android:layout_height="31dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="8dp"
        android:text="@string/textview"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nomeproduto"
        android:layout_width="136dp"
        android:layout_height="32dp"
        android:layout_marginEnd="25dp"
        android:text="@string/textview"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/precoproduto"
        app:layout_constraintTop_toTopOf="@+id/precoproduto" />

    <ImageView
        android:id="@+id/imagelist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toStartOf="@+id/qntproduto"
        app:layout_constraintTop_toTopOf="@+id/nomeproduto"
        app:srcCompat="@mipmap/ic_launcher" />

</android.support.constraint.ConstraintLayout>